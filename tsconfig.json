{
  "compilerOptions": {
    "module": "commonjs",
    "target": "es6",
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "noImplicitAny": false,
    "lib": ["es2017", "dom"],
    "moduleResolution": "node",
    "sourceMap": true,
    "jsx": "preserve",
    "noEmit": false,
    "outDir": "dist",
    "skipLibCheck": true,
    "baseUrl": "src"
  },
  "include": [
    "src/**.ts",
    "src/**.tsx"
  ],
  "exclude": [
    "node_modules"
  ]
}