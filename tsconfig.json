{
  "compilerOptions": {
    "module": "commonjs",
    "target": "es6",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "noImplicitAny": false,
    "lib": ["es2017", "dom"],
    "moduleResolution": "node",
    "sourceMap": true,
    "jsx": "preserve",
    "noEmit": false,
    "outDir": "dist",
    "skipLibCheck": true,
    "baseUrl": "src"
  },
  "compileOnSave": true,
  "exclude": [
    "node_modules"
  ]
}