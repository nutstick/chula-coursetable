{
  "compilerOptions": {
    "module": "commonjs",
    "target": "es6",
    "experimentalDecorators": true,
    "allowJs": true,
    "emitDecoratorMetadata": true,
    "noImplicitAny": false,
    "lib": ["es2017", "dom"],
    "moduleResolution": "node",
    "sourceMap": true,
    "jsx": "preserve",
    "noEmit": false,
    "outDir": "dist",
    "skipLibCheck": true,
    "allowSyntheticDefaultImports": true
  },
  "exclude": [
    "node_modules"
  ],
  "compileOnSave": false,
  "buildOnSave": false
}